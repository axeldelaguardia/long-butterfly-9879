<h2><%= @amusement_park.name %></h2>
<p>Price of Admission: <%= @amusement_park.admission_cost %></p>

<div id='rides'>
	<% @rides.each do |ride| %>
	<% ride.avg_years = 0 if ride.avg_years.nil?  %>
		<p><%= ride.name %> - Average Experience of Mechanics: <%= ride.avg_years.to_f %></p>
	<% end %>
</div>

<div id='mechanics'>
	<h4>Mechanics Working On <%= @amusement_park.name %>'s Rides</h4>
	<ol>
		<% @mechanics.each do |mechanic| %>
			<li><%= mechanic.name %></li>
		<% end %>
	</ol>
</div>